<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.personFragment">


    <!-- Outer layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <!-- Layout for profile information -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Profile_Picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/person_icon" />

            <TextView
                android:id="@+id/Name"
                android:layout_toEndOf="@id/Profile_Picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:text="Name:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Age"
                android:layout_toEndOf="@id/Profile_Picture"
                android:layout_below="@id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:text="Age:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Name_Edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/Name"
                android:layout_marginStart="3dp"
                android:layout_marginTop="40dp"
                android:minWidth="100dp"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/Age_Edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/Age"
                android:layout_below="@id/Name_Edit"

                android:layout_marginStart="3dp"
                android:minWidth="50dp"
                android:textSize="20sp"/>
        </RelativeLayout>

        <!-- Layout for user's image -->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/Timetable_Image"
                android:layout_width="320dp"
                android:layout_height="350dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center" />

        </LinearLayout>


        <!-- Layout for upload button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Upload_Button"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/upload_button"
                android:layout_marginTop="30dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>