<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/Back_Arrow"
        android:src="@drawable/back_arrow"
        android:layout_width="@dimen/backArrowW"
        android:layout_height="@dimen/backArrowH"
        android:layout_marginBottom="640dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="280dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/back_arrowCD">
    </ImageView>

    <TextView
        android:id="@+id/Tap_Message_Voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tap_message_voice"
        android:textSize="40sp"
        android:textColor="#000000"
        android:layout_marginTop="150dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Back_Arrow">
    </TextView>

    <ImageView
        android:id="@+id/Tap_Mic_Arrow"
        android:src="@drawable/back_arrow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:rotation="270"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@id/Mic_Icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tap_Message_Voice"
        android:contentDescription="@string/tap_mic_arrowCD">
    </ImageView>

    <ImageView
        android:id="@+id/Mic_Icon"
        android:src="@drawable/microphone_icon"
        android:layout_width="200dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:contentDescription="@string/mic_iconCD">
    </ImageView>

    <TextView
        android:id="@+id/Speech_Output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Mic_Icon">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>