<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <!-- back arrow's layout -->
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >

            <ImageButton
                android:id="@+id/Back_Arrow"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:background="@drawable/back_arrow"
                android:scaleType="fitStart"/>

        </RelativeLayout>


        <!-- voice rec button's layout we will edit active to bring our icon back to the highest picture level-->
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">



                <Button
                    android:id="@+id/Mic_Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/voicebutton"
                    android:layout_centerInParent="true"
                    />

            <ImageView
                android:layout_height="150dp"
                android:layout_width="150dp"
                android:background="@drawable/microphone_icon"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>


        <!-- voice rec result's layout -->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Tap_Message_Voice"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Say your name"
                />

            <TextView
                android:id="@+id/Speech_Output"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:gravity="center"/>


        </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>